<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<VBox fx:id="sidebarRoot" styleClass="sidebar" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.githiora.hmis_app.controllers.dashboard.SidebarController">
    
    <!-- Sidebar Header -->
    <HBox styleClass="sidebar-header">
        <Label styleClass="sidebar-header-label" text="HMIS" />
    </HBox>
    
    <!-- User Panel -->
    <VBox styleClass="sidebar-user-panel">
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label style="-fx-font-size: 32px; -fx-text-fill: white;">
            <graphic>
               <FontIcon iconColor="WHITE" iconLiteral="far-user" wrappingWidth="37.0" />
            </graphic></Label>
            <VBox>
                <Label fx:id="userNameLabel" styleClass="user-name" text="Admin User" />
                <Label fx:id="userRoleLabel" styleClass="user-role" text="Administrator" />
            </VBox>
        </HBox>
    </VBox>
    
    <Separator styleClass="sidebar-separator" />
    
    <!-- Scrollable Menu Area -->
    <ScrollPane fitToWidth="true" style="-fx-background: transparent; -fx-background-color: transparent;" VBox.vgrow="ALWAYS">
        <VBox fx:id="menuContainer" spacing="0">
            <!-- Menus will be added programmatically -->
        </VBox>
    </ScrollPane>
    
    <!-- Sidebar Footer (Optional) -->
    <VBox style="-fx-padding: 15px; -fx-background-color: rgba(0,0,0,0.2);" styleClass="sidebar-footer">
        <Label style="-fx-text-fill: rgba(255,255,255,0.5); -fx-font-size: 11px;" text="Version 1.0.0" />
    </VBox>
   <stylesheets>
      <URL value="@../../css/sidebar.css" />
      <URL value="@../../css/styles.css" />
   </stylesheets>
    
</VBox>
