<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="20" style="-fx-padding: 30;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/25">
    
    <Label styleClass="label-header" text="Dashboard" />
    
    <HBox spacing="20">
        <!-- Card 1 -->
        <VBox alignment="CENTER" prefHeight="150" prefWidth="250" spacing="10" styleClass="card">
            <Label style="-fx-font-size: 16px;" text="Total Patients" />
            <Label style="-fx-font-size: 36px; -fx-font-weight: bold;                     -fx-text-fill: #2196F3;" text="1,234" />
        </VBox>
        
        <!-- Card 2 -->
        <VBox alignment="CENTER" prefHeight="150" prefWidth="250" spacing="10" styleClass="card">
            <Label style="-fx-font-size: 16px;" text="Active Staff" />
            <Label style="-fx-font-size: 36px; -fx-font-weight: bold;                     -fx-text-fill: #4CAF50;" text="89" />
        </VBox>
        
        <!-- Card 3 -->
        <VBox alignment="CENTER" prefHeight="150" prefWidth="250" spacing="10" styleClass="card">
            <Label style="-fx-font-size: 16px;" text="Appointments" />
            <Label style="-fx-font-size: 36px; -fx-font-weight: bold;                     -fx-text-fill: #FF5722;" text="42" />
        </VBox>
    </HBox>
    
    <VBox spacing="15" styleClass="card">
        <Label styleClass="label-subheader" text="Recent Activity" />
        <Separator />
        <Label text="• New patient registered - John Doe" />
        <Label text="• Appointment scheduled - 2:00 PM" />
        <Label text="• Lab results updated - Patient #1234" />
    </VBox>
    
</VBox>
