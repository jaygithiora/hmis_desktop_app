<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox fx:id="rootContainer" prefHeight="800" prefWidth="1400" stylesheets="@css/login.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.githiora.hmis_app.controllers.DbSetupController">
    
    <!-- Left Section - 4 parts -->
    <VBox fx:id="leftSection" styleClass="login-left-section" HBox.hgrow="ALWAYS">
        <VBox alignment="CENTER" spacing="20" styleClass="login-overlay" VBox.vgrow="ALWAYS">
            <Label style="-fx-font-size: 48px; -fx-font-weight: bold; -fx-text-fill: white;" text="HMIS" />
            <Label maxWidth="400" style="-fx-font-size: 18px; -fx-text-fill: white; -fx-text-alignment: center;" text="Hospital Management Information System" wrapText="true" />
            <Label style="-fx-font-size: 16px; -fx-text-fill: rgba(255,255,255,0.8);" text="Efficient • Reliable • Secure" />
        </VBox>
    </VBox>
    
    <!-- Right Section - 3 parts -->
    <VBox fx:id="rightSection" alignment="CENTER" spacing="30" style="-fx-background-color: white;" styleClass="login-right-section">
        <padding>
            <Insets bottom="60" left="60" right="60" top="60" />
        </padding>
        
        <!-- Rest of your form here -->
        <VBox alignment="CENTER" spacing="10">
            <Label style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #333;" text="MySQL Database Setup" />
            <Label style="-fx-font-size: 14px; -fx-text-fill: #666;" text="Configure your database credentials to continue using this app" />
        </VBox>
        
        <VBox prefWidth="320" spacing="20">
            <VBox spacing="8">
                <Label style="-fx-font-weight: 600; -fx-text-fill: #333;" text="Host" />
                <TextField fx:id="hostField" promptText="Database Host" styleClass="login-text-field" />
            </VBox>
            
            <VBox spacing="8">
                <Label style="-fx-font-weight: 600; -fx-text-fill: #333;" text="Port" />
                <TextField fx:id="portField" accessibleRole="TEXT_FIELD" promptText="Database Port" styleClass="login-text-field" />
            <VBox layoutX="10.0" layoutY="89.0" spacing="8">
               <children>
                  <Label style="-fx-font-weight: 600; -fx-text-fill: #333;" text="Database Username" />
                  <TextField fx:id="userField" accessibleRole="TEXT_FIELD" promptText="Database Username" styleClass="login-text-field" />
               </children>
            </VBox>
            <VBox spacing="8">
               <children>
                  <Label style="-fx-font-weight: 600; -fx-text-fill: #333;" text="Password" />
                  <PasswordField fx:id="passField" accessibleRole="TEXT_FIELD" promptText="Database Password" styleClass="login-text-field" />
               </children>
            </VBox>
            <VBox layoutX="10.0" layoutY="168.0" spacing="8">
               <children>
                  <Label style="-fx-font-weight: 600; -fx-text-fill: #333;" text="Database Name" />
                  <TextField fx:id="dbField" accessibleRole="TEXT_FIELD" promptText="Database Name" styleClass="login-text-field" />
                  <Label fx:id="statusLabel" layoutX="10.0" layoutY="10.0" style="-fx-font-weight: 600; -fx-text-fill: #333;" text="Database Status" />
               </children>
            </VBox>
            </VBox>
            <HBox alignment="CENTER" spacing="10" />
            
            <HBox alignment="CENTER" spacing="10">
            <children>
               <Button fx:id="testConnectionBtn" maxWidth="Infinity" onAction="#onTestConnection" prefHeight="45" prefWidth="320" styleClass="login-button-secondary" text="Test Connection" HBox.hgrow="ALWAYS" />
               <Button fx:id="saveBtn" layoutX="10.0" layoutY="10.0" maxWidth="Infinity" onAction="#onSave" prefHeight="45" prefWidth="320" styleClass="login-button" text="Save Configurations" />
            </children></HBox>
        </VBox>
    </VBox>
    
</HBox>
